<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >
        <ImageView
            android:id="@+id/iv_home_carde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/_228_1_enlarged"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_ocean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Ocean Moon"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/tv_non_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-stop 8- hour mixes of our\nmost popular sleep audio"
            app:layout_constraintTop_toBottomOf="@id/tv_ocean"
            app:layout_constraintStart_toStartOf="@id/tv_ocean"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"
            app:layout_constraintTop_toBottomOf="@id/tv_non_stop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/white"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

